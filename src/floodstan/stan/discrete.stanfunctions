
// ------- Count functions -----------------------------
// 1=Poisson, 2=Negative Binomial

real discrete_lpmf(int n, int disc, real locn, real phi)
{

    if(disc==1){
        return poisson_lpmf(n | locn);
    }
    else if(disc==2){
        return neg_binomial_2_lpmf(n | locn, phi);
    }
    else if(disc==3){
        return bernoulli_lpmf(n | locn);
    }
    return not_a_number();
}



